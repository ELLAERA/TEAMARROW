    <div class="container1">

    <!-- begin section availability  -->
    <section id="register" class="section-gray" style="background-color:#ced4da;">

        <div class="form-container" id="memberRegistration">
            <div class="header">
                <h2>User Registration</h2>
            </div>
            <form class="form" id="registerForm" onsubmit="return false;">
                <div class="form-control">
                    <label>Firstname</label>
                    <input type="text" placeholder="rumi17" id="firstname">
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div class="form-control">
                    <label>Lastname</label>
                    <input type="text" placeholder="ferdowsi7" id="lastname">
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div class="form-control ">
                    <label>Address</label>
                    <input type="text" placeholder="address" id="address">
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div class="form-control">
                    <label>City</label>
                    <input type="text" placeholder="city" id="city">
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div class="form-control ">
                    <label>Postal Code</label>
                    <input type="text" placeholder="postal-code" id="postalcode">
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div class="form-control">
                    <label>Province</label>
                    <input type="text" list="provinces" placeholder="province" id="province">
                    <datalist id="provinces">
            <option value="QC">
            <option value="ON">
            <option value="MN">
            <option value="SK">
            <option value="AB">
            <option value="AB">
          </datalist>
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div class="form-control">
                    <label>Age</label>
                    <input type="number" placeholder="age" id="age" min="1">
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>

                <div class="form-control">
                    <label>Password</label>
                    <input type="password" placeholder="Password" id="password">
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div class="form-control">
                    <label>Confirm Password</label>
                    <input type="password" placeholder="Repeat password" id="password2">
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div class="form-control">
                    <label>Email</label>
                    <input type="text" placeholder="hello@email.com" id="email">
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div>
                    <p class="validationError" style="visibility: hidden;" id="validationResult"> </p>
                    <p class="validationSuccess" style="visibility: hidden;" id="successResult"> </p>
                </div>

                <div class="submission">
                    <div>
                        <button id="btnRegisterAccount">Register Account</button>
                    </div>
                    <div>
                        <button id="btnClear">Clear</button>
                    </div>
                </div>
            </form>

        </div>
    </section>







